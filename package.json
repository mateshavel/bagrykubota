{
  "version": "1.1.0",
  "name": "cts_corp_website",
  "description": "webpack with stylelint config. Updated on 14.7.2022",
  "private": true,
  "main": "./postcss.config.js",
  "author": "Riganti s.r.o.",
  "license": "ISC",
  "devDependencies": {
    "@googlemaps/js-api-loader": "^1.13.10",
    "@googlemaps/markerclusterer": "^1.0.25",
    "@types/googlemaps": "^3.43.3",
    "autoprefixer": "^10.4.4",
    "axios": "^0.26.1",
    "browser-sync": "^2.27.9",
    "clean-css-cli": "^5.5.2",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-scss": "^4.0.3",
    "postcss-value-parser": "^4.2.0",
    "stylelint": "^14.2.0",
    "stylelint-order": "^5.0.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "uglify-js": "^3.15.3",
    "watch": "^0.13.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "browserslist": {
    "production": [
      "defaults",
      "IE 11",
      "not IE_Mob 11"
    ],
    "development": [
      "defaults"
    ]
  },
  "stylelint": {
    "enabled": true,
    "rules": ".stylelintrc.json",
    "fileExtensions": "scss"
  },
  "scripts": {
    "bundle": "npm run bundle:css && npm run build-prod",
    "build-dev": "webpack --mode=development",
    "build-prod": "webpack --mode=production",
    "build-watch": "webpack --mode=development --watch",
    "postcss": "npm run compile:scss && postcss wwwroot/css/style.css --config ./postcss.config.js -o wwwroot/css/style.css",
    "bundle:css": "npm run stylelint && npm run compile:scss && postcss wwwroot/css/style.css --config ./postcss.config.js | cleancss -o docs/css/style.min.css",
    "compile:scss": "node-sass --source-map=true Resources/Stylesheets/Scss/style.scss wwwroot/css/style.css",
    "compile:ts": "tsc -p Resources",
    "stylelint": "stylelint --fix Resources/Stylesheets/SCSS/**/*.scss --custom-syntax postcss-scss",
    "watch:scss": "npm run bundle:css & watch \"npm run bundle:css\" Resources/Stylesheets/Scss"
  }
}
